{
  "name": "expo-server-sdk-bun",
  "version": "4.0.1",
  "description": "Server-side library for working with Expo using Bun",
  "keywords": [
    "bun",
    "expo",
    "push-notifications"
  ],
  "homepage": "https://github.com/kien-ngo/expo-server-sdk-bun#readme",
  "bugs": {
    "url": "https://github.com/kien-ngo/expo-server-sdk-bun/issues"
  },
  "license": "MIT",
  "author": "github@kien.ngo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kien-ngo/expo-server-sdk-bun.git"
  },
  "files": [
    "build"
  ],
  "main": "build/ExpoClient.js",
  "types": "build/ExpoClient.d.ts",
  "scripts": {
    "build": "bun prepack",
    "prepack": "tsgo --project tsconfig.build.json",
    "test": "jest --coverage",
    "typecheck": "tsgo --noEmit -p tsconfig.json",
    "lint": "oxlint --type-aware",
    "format": "oxfmt --check",
    "format:fix": "oxfmt",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@typescript/native-preview": "^7.0.0-dev.20260109.1",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "msw": "2.10.5",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "oxlint-tsgolint": "^0.11.0",
    "ts-jest": "29.4.5",
    "typescript": "^5.9.3"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/../coverage",
    "coveragePathIgnorePatterns": [
      "/lib/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 0
      }
    },
    "preset": "ts-jest",
    "rootDir": "src",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/lib/"
    ]
  }
}
